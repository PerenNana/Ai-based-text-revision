import streamlit as sl
import random
import time


# Streamed response emulator
def response_generator():
    response = random.choice(
        [
            "Hello there! How can I assist you today?",
            "Do you need help?",
            "I'm here for you!"
            "Nice to talk to you!"
            "Do you mean Khalid or Khaled?"
        ]
    )
    for word in response.split():
        yield word + " "
        time.sleep(0.05)


sl.title("Simple Chat Bot")

# Initialize chat history
if "messages" not in sl.session_state:
    sl.session_state.messages = []

# Display chat messages from history on app rerun
for message in sl.session_state.messages:
    with sl.chat_message(message["role"]):
        sl.markdown(message["content"])

# React to user input (if user enter something, strore it in prompt and proceed it)
if prompt := sl.chat_input("Say something"):
    # Display user message in chat message container
    with sl.chat_message("user"):
        sl.markdown(prompt)
    # Add user message to chat history
    sl.session_state.messages.append(({"role": "user", "content": prompt}))

    # Display assistant response in chat message container
    with sl.chat_message("assistant"):
        response = sl.write_stream(response_generator())
    # Add assistant response to chat history
    sl.session_state.messages.append({"role": "assistant", "content": response})
